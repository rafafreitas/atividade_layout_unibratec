<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:id="@+id/buttonRed"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orange"
        android:id="@+id/buttonOrange"
        android:layout_toRightOf="@id/buttonRed"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yellow"
        android:id="@+id/buttonYellow"
        android:layout_toEndOf="@id/buttonOrange"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:id="@+id/buttonGreen"
        android:layout_below="@id/buttonRed"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:id="@+id/buttonBlue"
        android:layout_toRightOf="@id/buttonGreen"
        android:layout_below="@id/buttonRed"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indigo"
        android:id="@+id/buttonIndigo"
        android:layout_below="@id/buttonRed"
        android:layout_toRightOf="@id/buttonBlue"


        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Violet"
        android:id="@+id/buttonViolet"
        android:layout_below="@id/buttonGreen"


        />
</RelativeLayout>